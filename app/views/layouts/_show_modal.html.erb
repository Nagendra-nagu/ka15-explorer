<%
 modal_content ||= nil
 view_path ||= nil
%>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="d-flex justify-content-end">
        <button type="button" class="close m-2 p-1" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-header align-self-center border-0 text-center">
        <h3 class="modal-title" id="exampleModalLabel"><%= modal_title %></h3>
      </div>
      <div class="modal-body">
        <% if modal_content.present? %>
          <%= modal_content.html_safe %>
        <% elsif view_path.present? %>
          <%= render partial: view_path %>
        <% else %>
          <p>No content available.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
